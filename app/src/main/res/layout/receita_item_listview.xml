<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/mdtp_white">

    <RelativeLayout
        android:id="@+id/relative_layout_item_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/txt_descricao_receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt_tipo_receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_descricao_receita"
            android:layout_toEndOf="@+id/txt_id"
            android:layout_toRightOf="@+id/txt_id"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/txt_valor_receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/txt_tipo_receita"
            android:layout_toLeftOf="@+id/txt_data_receita"
            android:layout_toRightOf="@+id/txt_id"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/txt_data_receita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/txt_tipo_receita"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:gravity="center_vertical"
            android:visibility="invisible"/>

    </RelativeLayout>

</FrameLayout>
