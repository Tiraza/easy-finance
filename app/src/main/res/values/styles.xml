<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="FloatActionButton" parent="AppTheme">
        <item name="elevation">6dp</item>
        <item name="borderWidth">1dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="FloatActionButtonNormalState" parent="FloatActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="FloatActionButtonDeleteState" parent="FloatActionButton">
        <item name="backgroundTint">@color/floatActionButtonDeleteState</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/floatButtonTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
    </style>

</resources>
